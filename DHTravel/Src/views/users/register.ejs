<!DOCTYPE html>
<html lang="en">
    <%- include("../partials/head.ejs") %>
<body class="body-register">
    <%- include("../partials/header.ejs") %>
    <main class="main-container">
        <section class="data-box">
            <div class="data-logo-container">
                <img class="data-logo" src="/img/logo.png" alt="DHTravel Logo">
            </div>
            <div class="register-forms">
                <form class="forms" action="/register" method="POST" enctype="multipart/form-data">
                    <p>
                        <input class="data-item" type="text" name="firstName" id="firstName"
                        placeholder="Nombres" value="<%= locals.oldData ? oldData.firstName : null %>">
                        <% if (locals.errors && errors.firstName) { %>
                            <div class="validation-error">
                                <%= errors.firstName.msg %>
                            </div>
                        <% } %>
                    </p>
                    <p>
                        <input class="data-item" type="text" name="lastName" id="lastName"
                        placeholder="Apellidos" value="<%= locals.oldData ? oldData.lastName : null %>">
                        <% if (locals.errors && errors.lastName) { %>
                            <div class="validation-error">
                                <%= errors.lastName.msg %>
                            </div>
                        <% } %>
                    </p>
                    <p>
                        <input class="data-item" type="email" name="email" id="email"
                        placeholder="Correo electronico" value="<%= locals.oldData ? oldData.email : null %>">
                        <% if (locals.errors && errors.email) { %>
                            <div class="validation-error">
                                <%= errors.email.msg %>
                            </div>
                        <% } %>
                    </p>
                    <p>
                        <input class="data-item" type="text" name="category" id="category"
                        placeholder="Elija una categoria" value="<%= locals.oldData ? oldData.category : null %>">
                        <% if (locals.errors && errors.category) { %>
                            <div class="validation-error">
                                <%= errors.category.msg %>
                            </div>
                        <% } %>
                    </p>
                    <label for=""></label>
                    <p>
                        <input class="data-item" type="file" name="userImage" id="userImage"
                        placeholder="Imagen de perfil" value="<%= locals.oldData ? oldData.userImage : null %>">
                        <% if (locals.errors && errors.userImage) { %>
                            <div class="validation-error">
                                <%= errors.userImage.msg %>
                            </div>
                        <% } %>
                    </p>
                    </label>
                    <p>
                        <input class="data-item" type="password" name="password" id="password"
                        placeholder="ContraseÃ±a">
                    </p>
                    <!--<p>
                        <label for="no-robot"></label>
                        <input class="data-item" type="checkbox" name="no-robot" id="no-robot">
                    </p>-->
                    <p>
                        <button class="main-button-login" type="submit">
                            <i class="material-symbols-outlined">
                                airplanemode_active
                            </i></button>
                    </p>
                </form>
            </div>
            <div class="main-h4">
                <p>
                <h4>Tambien registrate con</h4>
                </p>
            </div>
            <div class="register-icon">
                <a class="fi1" href="#">
                    <i class="main-icon fa-brands fa-facebook"></i>
                </a>
                <a class="fi2" href="#">
                    <i class=" main-icon fa-brands fa-google"></i>
                </a>
            </div>
        </section>
    </main>
    <%- include("../partials/footer.ejs") %>
</body>
</html>