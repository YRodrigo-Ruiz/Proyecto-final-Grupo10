<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product</title>
    <img src="<%= `/img/productImage/${product.image}` %>" alt="">
    <h4><%= product.name %></h4>
    <h4><%= product.description %></h4>
    <h4><%= product.origin %></h4>
    <h4><%= product.destination %></h4>
    <h4><%= product.person %></h4>
    <h4><%= product.date %></h4>
    <h4><%= product.price %></h4>
    <h4><%= product.category_id %></h4>
    <button>
        <h4>
            <a href="/product/<%= product.id %>/edit">
                <h4>editar datos</h4>
            </a>
        </h4>
    </button>
		<form action="/product/<%= product.id %>/?_method=DELETE" method="POST" enctype="multipart/form-data">
            <input type="hidden" name="_method" value="delete"> 
            <button type="submit">
                <h4>Eliminar datos</h4>
            </button>
        </form>
</head>
<body class="body-detail">
    <main class="main-container-detail">
        <% for(let i=0; i< allProducts.length; i++) {%>
            <section class="detail-box">
                <div class="incluye">
                    <h3 class="h3-name-prodId"><%= allProducts[i].name %></h3>
                </div>
                <div class="img-paq">
                    <img src="<%= allProducts[i].image %>" alt="">
                </div>
                <section class="paquete">
                    <div class="incluye">
                        <h3>Incluye</h3>
                    </div>
                    <div class="main-h3">
                        <p class="p-prodId-desc">
                            Descripci√≥n: <%= allProducts[i].description %>
                        </p>
                        <p class="p-prodId">
                            Origen: <%= allProducts[i].origin %>
                        </p>
                        <p class="p-prodId">
                            Destino: <%= allProducts[i].destination %>
                        </p>
                        <p class="p-prodId">
                            Personas: <%= allProducts[i].person %>
                        </p>
                        <p class="p-prodId">
                            Categoria: <%= allProducts[i].category %>
                        </p>
                        <p class="p-prodId">
                            Fecha: <%= allProducts[i].date %>
                        </p>
                    </div>
                    <div class="precio">
                        <h3 class="h3-detail-prodId">Precio Total US$ <%= allProducts[i].price %>
                        </h3>
                    </div>
                </section>
                <section class="comprar">
                    <div class="main-h4">
                        <p>
                            <button class="boton"><a href="/carrito">
                                    <h4>Comprar paquete</h4>
                                </a></button>
                        </p>
                    </div>
                </section>

            </section>
            <% } %>
    </main>
</body>

</html>