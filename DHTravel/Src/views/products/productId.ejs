<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("../partials/head.ejs") %>
        <title>Productos</title>
</head>
<body class="body-detail">
    <main class="main-container-detail">
        <% for(let i=0; i< allProducts.length; i++) {%>
            <section class="detail-box">
                <div class="incluye">
                    <h3 class="h3-name-prodId"><%= allProducts[i].name %></h3>
                </div>
                <div class="img-paq">
                    <img src="<%= allProducts[i].image %>" alt="">
                </div>
                <section class="paquete">
                    <div class="incluye">
                        <h3>Incluye</h3>
                    </div>
                    <div class="main-h3">
                        <p class="p-prodId-desc">
                            Descripci√≥n: <%= allProducts[i].description %>
                        </p>
                        <p class="p-prodId">
                            Origen: <%= allProducts[i].origin %>
                        </p>
                        <p class="p-prodId">
                            Destino: <%= allProducts[i].destination %>
                        </p>
                        <p class="p-prodId">
                            Personas: <%= allProducts[i].person %>
                        </p>
                        <p class="p-prodId">
                            Categoria: <%= allProducts[i].category %>
                        </p>
                        <p class="p-prodId">
                            Fecha: <%= allProducts[i].date %>
                        </p>
                    </div>
                    <div class="precio">
                        <h3 class="h3-detail-prodId">Precio Total US$ <%= allProducts[i].price %>
                        </h3>
                    </div>
                </section>
                <section class="comprar">
                    <div class="main-h4">
                        <p>
                            <button class="boton"><a href="/carrito">
                                    <h4>Comprar paquete</h4>
                                </a></button>
                        </p>
                    </div>
                </section>

            </section>
            <% } %>
    </main>
</body>

</html>